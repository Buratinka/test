<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.controller.servlets.RegistrationServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>app.controller.servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>app.controller.servlets.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>app.controller.servlets.UpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.controller.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>admin_page</servlet-name>
        <servlet-class>app.controller.servlets.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin_page</servlet-name>
        <url-pattern>/admin_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user_page</servlet-name>
        <servlet-class>app.controller.servlets.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>user_page</servlet-name>
        <url-pattern>/user_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>app.controller.servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>guest_page</servlet-name>
        <servlet-class>app.controller.servlets.GuestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>guest_page</servlet-name>
        <url-pattern>/guest_page</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>jdbc/Cinema</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>